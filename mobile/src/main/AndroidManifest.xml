<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tempos21.cieguitos">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/notificacion_logo_caixa"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="icon">
        <activity
            android:name=".ui.activity.PhoneMainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.activity.ProfileActivity" />
        <activity android:name=".ui.activity.ListaPlantasActivity" />
        <activity android:name=".ui.activity.ListaExposActivity" />
        <activity android:name=".ui.activity.ListaTicketsActivity" />

        <service android:name=".service.LocationBeaconsService"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>
        <service
            android:name="com.estimote.sdk.service.BeaconService"
            android:exported="false"
            android:process=":beacon"/>
    </application>

</manifest>
